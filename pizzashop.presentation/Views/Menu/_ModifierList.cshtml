@model DAL.ViewModels.ModifierListViewModel


@* Modifier list  *@ 
@foreach (var c in Model.ModifierGroups)
{
    <div class="modifier-option d-flex justify-content-between align-items-center gap-2 @(Model.SelectedModifierGroup == c.ModifiergroupId ? "category-active-option" : "")"
        id="category_option" modifiergroup-id="@c.ModifiergroupId">
        <div class="d-flex gap-2" style="cursor: pointer;" onclick="loadmodifiers(@c.ModifiergroupId)"
            modifiergroup-id="@c.ModifiergroupId">
            <img src="~/images/icons/grid-3x2-gap-fill.svg" alt="" class="category-option-img ">
            <div>@c.Name</div>
        </div>

        <div class="d-flex justify-content-between gap-3 d-none" id="categoryoption_actionbtn">
            @if (ViewBag.CanMenuAddEdit)
            {
                <img src="~/images/icons/pen.svg" alt="" data-bs-toggle="modal" data-bs-target="#editmodifiergroupmodal"
                    onclick="openAddEditModifierGroupModal(@c.ModifiergroupId)" data-id="@c.ModifiergroupId" data-name="@c.Name"
                    data-description="@c.Description" data-obj='@Html.Raw(Json.Serialize(c))'>
            }

            @if (ViewBag.CanMenuDelete)
            {
                <img src="~/images/icons/trash.svg" data-bs-toggle="modal" data-bs-target="#deleteModifierGroupmodal"
                    onclick="setDeleteModifierGroupId(this)" data-id="@c.ModifiergroupId" alt="">
            }



        </div>
    </div>
}