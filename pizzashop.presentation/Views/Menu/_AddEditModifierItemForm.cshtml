@model DAL.ViewModels.AddModifierItemViewModel
<div class="modal-header">
    <h1 class="modal-title fs-5" id="staticBackdropLabel">@(Model.ModifierId != 0 ? "Edit" : "Add") Modifier Item</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form id="AddEditModifierItemForm" enctype="multipart/form-data">
    <div class="modal-body">
        <input type="text" class="form-control" id="ModifierId" asp-for="ModifierId" hidden>
        <div class="row">

            <div class="col-6">
                @* <label>Select Modifier Group</label> *@
                <div class="position-relative">
                    <!-- Display Selected Names -->
                    <div class="form-control p-3" id="modifierGroupSelectBoxForAddEdit" style="cursor: pointer;">
                        Select Modifier Group
                    </div>
                    <p class="text-danger d-none" id="selectModifierGroupValidationForEdit">Please select Modifier Group
                    </p>

                    <!-- Floating Checkbox List -->
                  
                    <div id="modifierGroupDropdownForAddEdit" class="position-absolute bg-white border rounded p-2 shadow"
                        style="display: none; z-index: 1000; width: 100%;">
                        @* load modifier group list *@
                    </div>
                    <span class="text-danger" asp-validation-for="ModifierGroupid"></span>
                </div>
            </div>


            <div class="col-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="ModifierName" asp-for="ModifierName" placeholder="Name">
                    <label for="ModifierName">Name*</label>
                    <span class="text-danger" asp-validation-for="ModifierName"></span> 
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-floating">
                    <input type="number" class="form-control" id="Rate" asp-for="Rate">
                    <label for="floatingInput">Rate</label>
                    <span class="text-danger" asp-validation-for="Rate"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-floating">
                    <input type="number" class="form-control" id="Quantity" asp-for="Quantity">
                    <label for="floatingInput">Quantity</label>
                    <span class="text-danger" asp-validation-for="Quantity"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-floating col">
                    <select class="form-select" asp-for="Unit" id="Unit">
                        <option value="">Select a Unit</option>

                        @foreach (var i in Model.UnitsList)
                        {
                            <option value="@i.Id">@i.Name</option>
                        }


                    </select>
                    <label for="floatingSelect">Unit</label>
                    <span class="text-danger" asp-validation-for="Unit"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="mt-3">

                    <textarea class="form-control" id="Description" rows="3" placeholder="Description"
                        asp-for="Description"></textarea>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 p-2">
            <button type="submit" class="btn custom-btn-bg text-white fw-medium"
                id="addmodifieritemmodalbtn">Save</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </div>

</form>