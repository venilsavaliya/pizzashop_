@model DAL.ViewModels.AddModifierGroupViewModel

<div class="modal-header">
    <h1 class="modal-title fs-5" id="staticBackdropLabel">@(Model.ModifierId != null ? "Edit" : "Add") Modifier Group
    </h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form method="post" id="addEditModifierForm">
    <div class="modal-body">
        <div class="d-flex flex-column">
            <input type="text" asp-for="ModifierId" hidden>
            <div class="mb-3">
                <input type="text" class="form-control p-3" asp-for="Name" placeholder="Name"
                    id="editmodifiergroupname">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">

                <textarea class="form-control" rows="3" placeholder="Description" asp-for="Description"
                    id="editmodifiergroupdescription"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="custom-blue mb-2 fs-sm cursor-pointer" id="addExistingModifierBtn">
                Add Existing Modifiers +
            </div>

            <div class="d-flex gap-2 flex-wrap" id="selectedModifieritemcontainerForAddEdit">

                @* ---- selected and existing modifier name here ---- *@

            </div>

        </div>
        <div class="d-flex justify-content-end gap-2 p-2">
            <button type="submit" class="btn custom-btn-bg text-white fw-medium">Save</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                onclick="ClearSection()">Cancel</button>
        </div>
    </div>



</form>

