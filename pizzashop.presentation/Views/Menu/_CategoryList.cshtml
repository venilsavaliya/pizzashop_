@model DAL.ViewModels.CategoryListViewModel



@* category list  *@
@foreach (var c in Model.Categories)
{
    <div class="category-option d-flex justify-content-between align-items-center gap-2 @(Model.SelectedCategory == c.Id ? "category-active-option" : "")"
        id="category_option" category-id="@c.Id">
        <div class="d-flex gap-2" style="cursor: pointer;" onclick="loadcategories(@c.Id)" category-id="@c.Id">
            <img src="~/images/icons/grid-3x2-gap-fill.svg" alt="" class="category-option-img ">
            <div>@c.Name</div>
        </div>

        <div class="d-flex justify-content-between gap-3 d-none" id="categoryoption_actionbtn">
            @if (ViewBag.CanMenuAddEdit)
            {
                <img src="~/images/icons/pen.svg" alt="" 
                    onclick="openAddEditCategoryModal(@c.Id)" data-id="@c.Id" data-name="@c.Name" data-description="@c.Description"
                    obj="@c" item-obj='@Html.Raw(Json.Serialize(c))'>
            }

            @if (ViewBag.CanMenuDelete)
            {
                <img src="~/images/icons/trash.svg" data-bs-toggle="modal" data-bs-target="#deletecategorymodal"
                    onclick="setDeleteCategoryId(this)" category-id="@c.Id" alt="">
            }

        </div>
    </div>
}