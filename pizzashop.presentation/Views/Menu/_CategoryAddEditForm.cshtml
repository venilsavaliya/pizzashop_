@model DAL.ViewModels.CategoryNameViewModel


    <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">@(Model.Id == 0 ? "Add" :"Edit") Category</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form id="categoryAddEditForm" method="post" asp-action="AddEditCategory">
        <div class="modal-body">
            <div class="d-flex flex-column">
                <input type="text" asp-for="Id" hidden>
                <div class="mb-3">

                    <input type="text" class="form-control p-3" id="addCategoryName" asp-for="Name"
                        placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">

                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Description"
                        asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end gap-2 p-2">
                <button type="submit" class="btn custom-btn-bg text-white fw-medium">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
