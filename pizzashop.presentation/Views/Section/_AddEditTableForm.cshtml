@model DAL.ViewModels.AddTableViewmodel

<div class="modal-header">
    <h1 class="modal-title fs-5" id="staticBackdropLabel">@(Model.TableId != 0 ? "Edit" : "Add") Table</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form asp-action="AddEditTableForm" id="AddEditTableForm" method="post" >
    <div class="modal-body">
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" id="TableidForEdit" asp-for="TableId" hidden>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="NameofTableforedit" asp-for="Name" placeholder="Name">
                    <label for="NameofTable">Name</label>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3">
                    <select class="form-select disabled-toggle " id="sectionidforedit" asp-for="SectionId">
                        @foreach(var i in Model.Sections)
                        {
                            <option value="@i.SectionId">@i.SectionName</option>
                        }
                    </select>
                    <label for="statusoftable">Section</label>
                    <span class="text-danger" asp-validation-for="SectionId"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="capacityoftableforedit" asp-for="Capacity">
                    <label for="floatingInput">Capacity</label>
                    <span class="text-danger" asp-validation-for="Capacity"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-floating">
                    <select class="form-select disabled-toggle " id="statusoftableforedit" asp-for="Status">
                        @foreach (var s in Model.Tablestatuses)
                        {
                            <option value="@s.Id">@s.Statusname</option>
                        }
                    </select>
                    <label for="statusoftable">Status</label>
                    <span class="text-danger" asp-validation-for="Status"></span>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end gap-2 p-2">
            <button type="submit" class="btn custom-btn-bg text-white fw-medium">Save</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </div>
</form>