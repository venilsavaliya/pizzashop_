@model DAL.ViewModels.TaxViewModel

<div class="modal-content w-100">
    <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">@(Model.TaxId == 0 ? "Add" : "Edit") Tax</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <form method="post" id="AddEditTaxForm" asp-action="AddEditTax">
        <div class="modal-body">
            <input type="text" class="form-control" id="taxIdForEdit" asp-for="TaxId" hidden>
            <div>
                <div class="row">
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="taxNameForEdit" asp-for="TaxName" placeholder="TaxName">
                            <label for="taxNameForEdit">Name*</label>
                            <span class="text-danger" asp-validation-for="TaxName"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <select class="form-select" id="typeOfTaxForEdit" asp-for="Type">

                                <option value="Percentage">Percentage</option>
                                <option value="Flat Amount">Flat Amount</option>

                            </select>
                            <label for="statusoftable">Type</label>
                            <span class="text-danger" asp-validation-for="Type"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="taxAmountForEdit" asp-for="TaxAmount">
                            <label for="floatingInput">Tax Amount*</label>
                            <span class="text-danger" asp-validation-for="TaxAmount"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-start gap-2">

                <div class="form-check form-switch d-flex align-items-center gap-3">

                    <input class="form-check-input toggle-btn" type="checkbox" role="switch" id="isEnabledForEdit"
                        asp-for="Isenable" value="true">
                    <label class="form-check-label mt-1" for="isEnabledForEdit">IsEnable</label>
                    <input name="Isenable" value="false" hidden />
                </div>

                <div class="form-check form-switch  d-flex align-items-center gap-3">
                    <input class="form-check-input toggle-btn" type="checkbox" role="switch" id="isDefaultForEdit"
                        asp-for="Isdefault" value="true">
                    <label class="form-check-label mt-1" for="isDefaultForEdit">Default</label>
                    <input name="Isdefault" value="false" hidden />
                </div>

            </div>
            <div class="d-flex justify-content-end gap-2 p-2">
                <button type="submit" class="btn custom-btn-bg text-white fw-medium">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>


</div>
</div>
