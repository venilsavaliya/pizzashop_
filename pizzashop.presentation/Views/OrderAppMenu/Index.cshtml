@{
    Layout = "~/Views/Shared/_OrderAppLayout.cshtml";
    ViewData["Title"] = "Menu";
}

<div class="p-0">

    <div class="d-flex flex-column bg-white position-fixed" style="width: 250px;font-weight: 600;height: 92.5vh;"
        id="category_list">
        @* pv of category list *@
    </div>
    <div class="main-container p-3" style="margin-left: 250px;">

        <div class="d-flex justify-content-between mb-3 ">
            <div class="d-flex justify-content-between">
                <div class="position-relative " style="width: 380px;">
                    <input type="text" class="p-2 w-100 " placeholder="Search" id="menuitem-search-field">
                    <img src="~/images/icons/search.svg" alt="" class="searchicon-img">
                </div>
            </div>
            <div class=" d-flex justify-content-start justify-content-md-end align-items-center gap-3">

                <div class="d-flex gap-2 align-items-center">
                    <span style="color: var(--veg)"><i class="bi bi-circle-fill"></i></span>
                    <span>Vegetarian</span>
                </div>
                <div class="d-flex gap-2 align-items-center">
                    <span class="" style="color: var(--nonveg)"><i class="bi bi-circle-fill"></i></span>
                    <span>Non-Vegetarian</span>
                </div>
            </div>
        </div>

        <div class="d-flex">
            <div id="menuitems_card" class="d-flex gap-3 flex-wrap w-50">
                @* pv of menuitems *@
            </div>
            <div class="orderTakingMenu w-50 bg-white p-4">


                <div class="first-section d-flex justify-content-between">
                    <div class="first d-flex align-items-center gap-2">
                        <div class="p-1" style="background-color: rgb(215, 223, 250);"><img
                                src="~/images/icons/diningtable.png" height="30" alt=""></div>
                        <div class="d-flex flex-column">
                            <div>First Floor</div>
                            <div> <span class="fw-bolder">Tables: </span>T1 T2</div>
                        </div>
                    </div>

                    <div class="second d-flex gap-3 align-items-center">
                        <div class="custom-blue-border orderTakingMenuIcon rounded"><i
                                class="bi bi-qr-code-scan custom-blue fs-4"></i></div>
                        <div class="custom-blue-border orderTakingMenuIcon rounded"><i
                                class="bi bi-person-lines-fill fs-4 custom-blue"></i></i></div>
                        <div class="custom-blue-border orderTakingMenuIcon rounded"><i
                                class="bi bi-chat-left-text fs-4 custom-blue"></i></div>
                    </div>
                </div>

                <div class="second-section">
                    <div class="table-responsive ">
                        <table class="table table-borderless" id="OrderTable">
                            <thead>

                                <tr>
                                    <th style="width: 400px;">Items</th>
                                    <th style="width: 100px;">Quantity</th>
                                    <th style="width: 100px;">Amount</th>
                                    <th></th>
                                </tr>

                            </thead>
                            <tbody id="MenuOrderItemTable">
                                <tr>
                                    <td class="align-middle">
                                        <div class="accordian-header" style="border: none;">
                                            <div class="d-flex justify-content-between align-items-center ">
                                                <div class="MenuItem-accordian-button collapsed d-flex justify-content-between"
                                                    type="button" data-bs-toggle="collapse"
                                                    data-bs-target="#flush-collapseTwo">
                                                    <div class="d-flex align-items-center  gap-4">
                                                        <div style="background-color: transparent;"><img
                                                                src="~/images/icons/drop-down-arrow.svg" alt=""
                                                                height="20" class="accordion-arrow">
                                                        </div>
                                                        <div class="text-nowrap mt-1" style="font-weight: 500;">
                                                            Panner Tikka Sandwich
                                                        </div>
                                                    </div>

                                                </div>



                                            </div>
                                        </div>
                                        <div id="flush-collapseTwo" class="accordion-collapse collapse"
                                            data-bs-parent="#accordionFlush">
                                            <div class="accordion-body d-flex flex-wrap gap-3 justify-content-start align-items-center"
                                                style="border: none;padding-bottom: 0;">
                                                <ul>
                                                    <li>
                                                        <div class="d-flex align-items-center gap-4 ">
                                                            <span>Onion</span>
                                                            <span>₹20.00</span>
                                                        </div>

                                                    </li>
                                                    <li>
                                                        <div class="d-flex align-items-center gap-4 ">
                                                            <span>capsicum</span>
                                                            <span>₹30.00</span>
                                                        </div>
                                                    </li>

                                                </ul>

                                            </div>
                                            <div class="d-flex justify-content-end p-2">

                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <div class="quantity-section d-flex rounded" style="border: 1px solid black;">
                                            <div class="px-2 align-self-center "><i class="bi bi-dash text-black"></i>
                                            </div>
                                            <input type="text" value="2" class="quantityInput">
                                            <div class="px-2 align-self-center "><i class="bi bi-plus text-black"></i>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle">

                                        <div class="d-flex flex-column">
                                            <span>₹ 200.00</span>
                                            <span>₹ 50.00</span>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <i class="bi bi-trash3"></i>
                                    </td>

                                </tr>
                            </tbody>
                        </table>






                    </div>
                </div>

                <hr>

                <div class="third-section">
                    <div class="d-flex w-100 align-ites-center justify-content-between">
                        <span class="fs-5" style="font-weight: 500;">Sub Total</span>
                        <span class="fs-5">₹1780.00</span>
                    </div>
                    <div class="d-flex w-100 align-ites-center justify-content-between">
                        <span>CGST</span>
                        <span>₹213.00</span>
                    </div>
                    <div class="d-flex w-100 align-ites-center justify-content-between">
                        <span>GST</span>
                        <span>₹130.00</span>
                    </div>
                    <div class="d-flex w-100 align-ites-center justify-content-between">
                        <span class="fs-5" style="font-weight: 500;">Total</span>
                        <span class="fs-5">₹1780.00</span>
                    </div>
                </div>

                <div class="fourth-section d-flex flex-column gap-2 mt-3">
                    <div class=" d-flex justify-content-end gap-2">
                    <button class="custom-btn-bg text-white p-2 border rounded" style="width: 200px;">
                        Save</button>
                    <button class="bg-white custom-blue-border rounded p-2 custom-blue" type="reset"
                        style="width: 200px;">Complete</button>
                    <button class="bg-white custom-blue-border rounded p-2 custom-blue" type="reset"
                        style="width: 200px;">Generate Invoice</button>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="bg-white custom-blue-border rounded p-2 custom-blue" type="reset"
                        style="width: 200px;">Cancel</button>
                </div>
                </div>
                
            </div>
        </div>

    </div>
</div>


@* ===== modal ======= *@


<div class="modal fade z-3" id="selectmodifieritemmodal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="selectmodifieritemmodalContent">
            

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/OrderAppMenu/OrderAppMenu.js"></script>